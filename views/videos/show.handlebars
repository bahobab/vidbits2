<div class="contents-container">
  <div class="video-card">
    <div class="video-title">
      <h1><span id="video-title">Title: <a href="/videos/{{id}}"></a>{{title}}</span></h1>
    </div>
    <iframe src="{{videoUrl}}" frameborder="0"></iframe>
    <div class="video-description">
      <p><span  id="video-description">Description: {{description}}</span></p>
    </div>
  </div>
  <a id="edit-video" type="button" href="/videos/{{id}}/edit">Edit Video</a>
  <form method="POST" action="/videos/{{id}}/deletions">
    <button type="submit" id="delete">Delete Video</button>
  </form>
</div>